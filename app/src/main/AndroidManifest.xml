<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.macgavrina.moodmenology">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ActivityFillDataTabs"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.macgavrina.moodmenology.fill.data" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ActivitySettings"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.macgavrina.moodmenology.settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ActivityEditMood"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.macgavrina.moodmenology.edit.mood" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ActivityEditAction"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.macgavrina.moodmenology.edit.action" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ActivityAddAction"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.macgavrina.moodmenology.add.action" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>